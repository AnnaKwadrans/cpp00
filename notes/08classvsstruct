// scope of a struct is public by default;
// scope of a class is private by default;

struct SampleStruct
{
    int i;

    SampleStruct(void);
    ~SampleStruct(void);

    void    bar(void) const;

};

struct SampleClass
{
    int i;

    SampleClass(void);
    ~SampleClass(void);

    void    bar(void) const;

};
